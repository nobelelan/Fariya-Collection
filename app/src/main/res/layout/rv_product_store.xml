<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rv_customer_contact_background"
    android:padding="10dp"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_bold"
        android:text="Product Name"
        android:textColor="@color/brown_dark"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_available_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gilroy_light"
        android:text="Available :"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_name" />

    <TextView
        android:id="@+id/txt_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="100"
        android:textColor="@color/brown_dark"
        android:textIsSelectable="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_available_text"
        app:layout_constraintStart_toEndOf="@id/txt_available_text"
        app:layout_constraintTop_toTopOf="@id/txt_available_text" />

    <TextView
        android:id="@+id/txt_retail_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gilroy_light"
        android:text="Retail Price :"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_available_text" />

    <TextView
        android:id="@+id/txt_retail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="550"
        android:textColor="@color/brown_dark"
        android:textIsSelectable="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_retail_price_text"
        app:layout_constraintStart_toEndOf="@id/txt_retail_price_text"
        app:layout_constraintTop_toTopOf="@id/txt_retail_price_text" />

    <TextView
        android:id="@+id/txt_wholesale_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wholesale Price :"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/gilroy_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_retail_price_text" />

    <TextView
        android:id="@+id/txt_wholesale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="380"
        android:textColor="@color/brown_dark"
        android:textIsSelectable="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_wholesale_price_text"
        app:layout_constraintStart_toEndOf="@id/txt_wholesale_price_text"
        app:layout_constraintTop_toTopOf="@id/txt_wholesale_price_text" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>