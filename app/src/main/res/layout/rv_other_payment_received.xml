<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <EditText
        android:id="@+id/edt_sender_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_input"
        android:ellipsize="end"
        android:ems="10"
        android:fontFamily="@font/gilroy_light"
        android:hint="Sender Name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:maxLines="2"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476"
        app:layout_constraintWidth_percent=".35" />

    <EditText
        android:id="@+id/edt_payment_method"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/custom_input"
        android:ellipsize="end"
        android:ems="10"
        android:fontFamily="@font/gilroy_light"
        android:hint="Method"
        android:inputType="text"
        android:maxLength="25"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintWidth_percent=".26"
        app:layout_constraintBottom_toBottomOf="@+id/edt_sender_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edt_sender_name"
        app:layout_constraintTop_toTopOf="@+id/edt_sender_name" />

    <EditText
        android:id="@+id/edt_amount"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/custom_input"
        android:ellipsize="end"
        android:ems="10"
        android:fontFamily="@font/gilroy_light"
        android:hint="Amount"
        android:inputType="number"
        android:maxLength="12"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintWidth_percent=".22"
        app:layout_constraintBottom_toBottomOf="@+id/edt_payment_method"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edt_payment_method"
        app:layout_constraintTop_toTopOf="@+id/edt_payment_method" />

    <TextView
        android:id="@+id/txt_update"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:background="@color/dark_grey"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:text=" update "
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edt_amount"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>