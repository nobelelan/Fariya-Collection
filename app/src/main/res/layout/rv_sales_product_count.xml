<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <EditText
        android:id="@+id/edt_product_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="  Product name"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxLength="20"
        android:fontFamily="@font/gilroy_light"
        app:layout_constraintBottom_toBottomOf="@+id/txt_serial_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toEndOf="@+id/txt_serial_no"
        app:layout_constraintTop_toTopOf="@+id/txt_serial_no"
        app:layout_constraintVertical_bias="0.476"
        app:layout_constraintWidth_percent=".35" />

    <EditText
        android:id="@+id/edt_quantity"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="  Quantity"
        android:inputType="number"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="8"
        android:fontFamily="@font/gilroy_light"
        app:layout_constraintBottom_toBottomOf="@+id/edt_product_name"
        app:layout_constraintStart_toEndOf="@+id/edt_product_name"
        app:layout_constraintTop_toTopOf="@+id/edt_product_name" />

    <EditText
        android:id="@+id/edt_price"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="  Price"
        android:inputType="number"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="8"
        android:fontFamily="@font/gilroy_light"
        app:layout_constraintBottom_toBottomOf="@+id/edt_quantity"
        app:layout_constraintStart_toEndOf="@+id/edt_quantity"
        app:layout_constraintTop_toTopOf="@+id/edt_quantity" />

    <TextView
        android:id="@+id/txt_serial_no"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:text=" 1 "
        android:fontFamily="@font/gilroy_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:text=" Total "
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="@font/gilroy_bold"
        android:textColor="@color/white"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/edt_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edt_price"
        app:layout_constraintTop_toTopOf="@+id/edt_price" />

</androidx.constraintlayout.widget.ConstraintLayout>